<% games.each do |game| %>
  <div class="col-sm-3 mx-3 my-2">
    <div class="card p-2" style="width: 18rem; height: 500px;">
      <div class="bd-placeholder-img card-img-top px-auto" width="100%" height="5" ><%= image_tag game.image, size: "250x150" %></div>
      <div class="card-body">
        <h5 class="card-title">ゲーム名：<%= game.name %></h5>
        <% if game.is_delete == true %>
          <p>この投稿は削除しております。</p>
        <% else %>
          <p class="card-text" style="height:80px;">
            概要：<br>
            <%= game.overview %>
          </p>
          <p class="card-text" style="height:25px;">
            タグ：
            <% game.tags.each do |tag| %>
              <%= tag.tag %>
            <% end %>
          </p>
        <i  class="fas fa-heart" aria-hidden="true"></i><%= game.favorites.count %>いいね<br>
        <% end %>
      </div>
      <%= link_to "詳細ページへ", admin_game_path(game.id), class: "btn btn-primary" %>
    </div>
  </div>
<% end %>