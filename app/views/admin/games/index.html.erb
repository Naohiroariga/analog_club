<div class="container">
  <h2>投稿一覧</h2>

  <div class="card px-3 pb-2">
    <div class="card-head">
      <p style="font-size: 20px;"><<絞り込み>></p>
    </div>
    <div class="body">
      <div class="sort d-flex">
        <p>並び替え:</p>
        <%= link_to "投稿が新しい順", admin_games_path(new_date: true), class: "mx-2" %> | <%= link_to "いいねの多い順", admin_games_path(favorite: true), class: "ml-2" %>
      </div>
      <div class="tag d-flex flex-wrap">
        <P class="mr-2">タグ検索:</P>
        <% unless @tags.nil? %>
          <% @tags.each do |tag| %>
           <%= link_to tag, admin_search_path(word: tag, model: "tag"), class: "btn btn-outline-dark mr-2" %>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>

  <div class="index-kv row d-flex justify-content-center mt-3 overflow-auto">
    <%= render "admin/games/index", games: @games %>
  </div>

</div>
