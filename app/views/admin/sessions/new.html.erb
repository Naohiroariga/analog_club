<% if alert %>
  <div class="alert alert-warning d-flex justify-content-center">
   <ul>
     <li><%= alert %></li>
   </ul>
  </div>
<% end %>
<div class="container" style="height: 600px; background:url(/assets/bg_image.jpeg); background-size: cover;">
   <h2  class="d-flex justify-content-center mb-5 pt-5">管理者ログイン</h2>

   <%= form_with model: @admin, url: admin_session_path do |f| %>
    <div class="field row d-flex justify-content-center mb-3">
      <label for="email" class="col-sm-2 col-form-label">メールアドレス</label>
      <div class="col-sm-9">
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
      </div>
    </div>

    <div class="field row d-flex justify-content-center">
      <label for="password" class="col-sm-2 col-form-label">パスワード</label>
      <div class="col-sm-9">
        <%= f.password_field :password, autocomplete: "current-password", class: "form-control" %>
      </div>
    </div>
    <% if devise_mapping.rememberable? %>
      <div class="field row d-flex justify-content-center">
        <div class="col-sm-2"></div>
        <div class="col-sm-9">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      </div>
    <% end %>

    <div class="actions d-flex justify-content-center">
      <%= f.submit "Log in", class: "col-4" %>
    </div>
   <% end %>
</div>
