<div class="container my-3">
  <h1><%= @user.name %>さんのプロフィール編集</h1>

  <%= form_with model: @user, url: admin_user_path(@user.id), method: :patch, local: true do |f| %>
    <%= render "public/users/edit_form", f: f %>

    <div class="form_group">
      <%= f.label :会員ステータス %>
      <%= f.radio_button :is_delete, false %>
      <%= f.label :is_delete, "有効", class: "mr-3" %>
      <%= f.radio_button :is_delete, true %>
      <%= f.label :is_delete, "退会" %>
    </div>

    <div class="form-group">
      <%= f.submit "編集する", class: "btn btn-success" %>
    </div>
  <% end %>
</div>
