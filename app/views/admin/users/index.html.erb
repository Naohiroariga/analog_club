<div class="container">
  <h2>ユーザー一覧</h2>

  <table class="table table-hover">
    <thead>
      <tr>
        <th>ユーザーID</th>
        <th>ニックネーム</th>
        <th>メールアドレス</th>
        <th>ステータス</th>
      </tr>
    </thead>
    <tbody>
      <% @users.each do |user| %>
      <tr>
         <td><%= user.id %></td>
         <td>
           <%= link_to admin_user_path(user.id) do %>
             <%= user.name %>
           <% end %>
         </td>
         <td><%= user.email %></td>
         <% if user.is_delete == false %>
            <td class="text-success"><strong>有効</strong></td>
         <% else %>
            <td class="text-black-50"><strong>退会</strong></td>
         <% end %>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>