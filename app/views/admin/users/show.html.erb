<div class="container my-3">
  <h1><%= @user.name %>さんのページ</h1>

  <div class="user_date mt-5">
   <%= image_tag @user.get_profile_image, size: "100x100" %>
   <ul>
     <li>ニックネーム： <%= @user.name %></li>
     <li>コメント： <%= @user.comment %></li>
     <li>投稿数：<%= @user.games.count %></li>
     <li>いいね： <%= @user.favorites.count %></li>
     <li>フォロー数： <%= link_to @user.followings.count, user_followings_path(@user.id) %></li>
     <li>フォロワー数： <%= link_to @user.followers.count, user_followers_path(@user.id) %></li>
     <li>ステータス：
       <% if @user.is_delete == false %>
          <p class="text-success"><strong>有効</strong></p>
       <% else %>
          <p class="text-black-50"><strong>退会</strong></p>
       <% end %>
     </li>
   </ul>
   <div class="editer">
     <%= link_to "編集する", edit_admin_user_path(@user), class: "btn btn-success" %>
   </div>
   <h2>投稿一覧</h2>
   <div class="games row">
     <% if @user.games.empty? %>
       <h3>投稿はありません</h3>
     <% else %>
       <%= render "admin/games/index", games: @user.games %>
     <% end %>
   </div>

  </div>
