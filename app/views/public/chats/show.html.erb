<div class="container">
  <h1 id="room"><%= @user.name %> さんとのチャット</h1>

  <div class="d-flex justify-content-center mt-5">
    <div class="message" style="width: 90%;">
      <% @chats.each do |chat| %>
        <% if chat.user_id == current_user.id %>
          <div class="user d-flex justify-content-end my-2">
            <div class="text-right alert alert-primary mr-3" style="width: 75%;">
              <%= chat.message %>
            </div>
            <div class="user_image">
              <%= image_tag chat.user.get_profile_image, size: "80x80" %>
            </div>
          </div>
        <% else %>
          <div class="user d-flex justify-content-start my-2">
           <div class="user_image">
            <%= image_tag chat.user.get_profile_image, size: "80x80" %>
           </div>
           <div class="user text-left alert alert-info ml-3" style="width: 75%;">
            <%= chat.message %>
           </div>
          </div>
        <% end %>
      <% end %>
    </div>
  </div>


  <div class="chat_form">
   <p>チャット入力</p>
   <div class="errors">
     <%= render "layouts/errors", model: @chat %>
   </div>

    <%= form_with model: @chat, data: {remote: true} do |f| %>
      <%= f.text_field :message, class: "form-control" %>
      <%= f.hidden_field :room_id %>
    <% end %>
  </div>


</div>
