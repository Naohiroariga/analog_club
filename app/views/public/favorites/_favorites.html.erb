<% if user_signed_in? %>
 <% if game.favorited_by?(current_user) %>
   <%= link_to game_favorites_path(game), method: :delete, style:'color: red;', remote: true do %>
     <i  class="fas fa-heart" aria-hidden="true" style="color: red;"></i>
     <%= game.favorites.count %>いいね
   <% end %>
 <% else %>
   <%= link_to game_favorites_path(game), method: :post, remote: true do %>
     <i class="far fa-heart" aria-hidden="true"></i>
     <%= game.favorites.count %>いいね
   <% end %>
 <% end %>
<% else %>
 <i  class="fas fa-heart" aria-hidden="true" style="color: red;"></i><%= game.favorites.count %>いいね<br>

<% end %>