<% games.each do |game| %>
  <div class="col-sm-3 mx-3 my-2">
    <div class="card p-2" style="width: 18rem; height: 500px;">
      <% if game.is_delete == true %>
        <div class="card-body">
          <p>この投稿は管理者により削除されております。</P>
        </div>
      <% else %>
        <div class="bd-placeholder-img card-img-top px-auto" width="100%" ><%= image_tag game.image, class:"thumbnail" %></div>
        <div class="card-body">
          <h5 class="card-title">ゲーム名：<%= game.name %></h5>
          <p class="card-text" style="height:60px;">
            概要：<br>
            <%= game.overview.truncate(28) %>
          </p>
          <p class="card-text" style="height:25px;">
            タグ：
            <% game.tags.each do |tag| %>
              <%= tag.tag %>
            <% end %>
          </p>
          <p>投稿日：<%= game.created_at.strftime('%Y年%m月%d日') %></p>
          <p><%= render "public/favorites/favorites", game: game %></p>
        </div>
      <% end %>
      <%= link_to "詳細ページへ", game_path(game.id), class: "btn btn-primary" %>
    </div>
  </div>
<% end %>