<div class="container">
  <h2>投稿一覧</h2>

  <div class="row">
    <% @games.each do |game| %>

      <div class="col-sm-3 mx-1">
        <div class="card p-2" style="width: 18rem; height: 450px;">
          <div class="bd-placeholder-img card-img-top px-auto" width="100%" height="5" ><%= image_tag game.image, size: "250x150" %></div>
          <div class="card-body">
            <h5 class="card-title">ゲーム名：<%= game.name %></h5>
            <p class="card-text" style="height:125px;">
              概要：<br>
              <%= game.overview %>
            </p>
            <%= render "public/favorites/favorites", game: game %><br>
            <%= link_to "詳細ページへ", game_path(game.id), class: "btn btn-primary" %>
          </div>
        </div>
      </div>

    <% end %>
  </div>

</div>
