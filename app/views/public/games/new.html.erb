<div class="container">
  <h2>新規投稿</h2>

  <%= form_with model: @game, local: true do |f| %>
    <div class="form-group">
      <%= f.label :ゲーム名 %>
      <%= f.text_field :name, autofocuse: true %>
    </div>
    <div class="form-group">
      <%= f.label :プレイ人数 %>
      <%= f.text_field :player %>
    </div>
    <div class="form-group">
      <%= f.label :概要 %>
      <%= f.text_area :overview %>
    </div>
    <div class="form-group">
      <%= f.label :操作説明 %>
      <%= f.text_area :how_to_use %>
    </div>

    <div class="ster_form-group" id="star">
      <%= f.label :game_quality,'ゲーム性 :', class: "star-title" %>
      <%= f.hidden_field :game_quality, id: :review_star %>
    </div>
    <script>
      $(document).on('turbolinks:load', function () {
　　　　$('#star').empty();
        $('#star').raty({
          size     : 36,
          starOff:  '<%= asset_path('star-off.png') %>',
          starOn : '<%= asset_path('star-on.png') %>',
 　 　  　　scoreName: 'book[star]',
          half: false,
        });
      }
    </script>



    <div class="form-group">
      <%= f.label :戦略性 %>
      <%= f.text_field :strategic %>
    </div>
    <div class="form-group">
      <%= f.label :協力性 %>
      <%= f.text_field :cooperation %>
    </div>
    <div class="form-group">
      <%= f.label :盛り上がり度 %>
      <%= f.text_field :excitement %>
    </div>
    <div class="form-group">
      <%= f.label :運 %>
      <%= f.text_field :luck %>
    </div>
    <div class="form-group">
      <%= f.label :画像 %>
      <%= f.file_field :image,  accept: "image/*" %>
    </div>
    <div class="form-group">
      <%= f.submit "投稿する", class: "btn btn-primary" %>
    </div>



  <% end %>




</div>