<div class="errors">
   <%= render "layouts/errors", model: resource %>
</div>
<div class="container mt-4 mb-3" style="height: 600px; background:url(../../assets/bg_image.jpg); background-size: cover;">
   <h2  class="d-flex justify-content-center mb-5 pt-5">新規登録</h2>

 <%= form_with model: @user, url: user_registration_path do |f| %>

   <div class="field row d-flex justify-content-center mb-3">
     <label for="name" class="col-sm-3 col-form-label">ニックネーム</label>
     <div class="col-sm-8">
       <%= f.text_field :name, autofocus: true, autocomplete: "name", class: "form-control" %>
     </div>
   </div>
   <div class="field row d-flex justify-content-center mb-3">
     <label for="email" class="col-sm-3 col-form-label">メールアドレス</label>
     <div class="col-sm-8">
       <%= f.email_field :email, autocomplete: "email", class: "form-control" %>
     </div>
   </div>
   <div class="field row d-flex justify-content-center mb-3">
     <label for="password" class="col-sm-3 col-form-label">パスワード(6文字以上)</label>
     <div class="col-sm-8">
       <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
     </div>
   </div>

   <div class="field row d-flex justify-content-center mb-3">
     <label for="password_confirmation" class="col-sm-3 col-form-label">パスワード（確認用）</label>
     <div class="col-sm-8">
     <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
     </div>
   </div>

   <div class="actions d-flex justify-content-center">
     <%= f.submit "Sign up", class: "col-4" %>
   </div>
 <% end %>

  <div class="sign-up mt-5 pt-5">
    <h5 class="d-flex justify-content-center px-3"> 既に登録済みの方</h3>
    <p class="text-center"><%= link_to "こちら", new_user_session_path, class: "hover-link" %> からログインしてください。</p>
  </div>
</div>